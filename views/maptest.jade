doctype html
html
  head
    title Simple Map
    meta(name='viewport', content='initial-scale=1.0')
    meta(charset='utf-8')
    style.
      html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      }
      #map {
        height: 100%;
        weight: 100%;
      }
  body
    div#map(style='height : 640px; width : 640px')
    script.
      var map;
      function initMap() {
      map = new google.maps.Map(document.getElementById('map'), {
      center: {lng: 120.975952, lat: 22.978624},
      zoom: 8,
      streetViewControl: false,
      scaleControl: true,
      zoomControl: true
      });
      }
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyBLxOWr1HxMvSb2Mim4roJUDWO0u1Pr_OE&callback=initMap', async='', defer='')

